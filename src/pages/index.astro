---
import '@fontsource/inter';
import '@fontsource/outfit';
import App from '../App.vue';
import { getConfig } from '../config';
import profile from '../profile.json';

import { getCollection } from 'astro:content';
import Hero from '../components/Hero.astro';
import { cautiousImport } from '../utils';

let heroMdB64 = await cautiousImport(import.meta.glob('../hero.txt'));
let heroMd = '';
if (import.meta.env.DEV) {
	heroMd = (await import('../hero.txt?raw')).default;
	heroMdB64 = '';
}
if (heroMdB64) {
	heroMd = Buffer.from(heroMdB64.split(',')[1], 'base64').toString('utf8');
}

const ghUsername = GITHUB_ACTOR || 'your_username';

const config = await getConfig();
let siteTitle = '';
if (config.siteTitle === undefined) siteTitle = "{username}'s Sites";
else siteTitle = config.siteTitle;
siteTitle = siteTitle.replace(/\{username\}/g, ghUsername);

const description = `List of ${ghUsername}'s GitHub projects`;

const projects = await getCollection('projects');
const projectPages = projects.map((p) => p.slug) as string[];

const topLeft = config.theme?.gradientColors?.topLeft || 'rgba(0, 0, 0, 0)';
const topRight = config.theme?.gradientColors?.topRight || 'rgba(0, 0, 0, 0)';

const langColors =
	(await cautiousImport(import.meta.glob('../lang-colors.json'))) || {};
---

<html lang="en-US">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.png" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>{siteTitle}</title>
		<meta name="description" content={description} />
		<meta property="og:description" content={description} />
		<meta property="og:title" content={siteTitle} />
		<style is:global define:vars={{ topLeft, topRight }}>
			:root {
				--gradient-top-left: var(--topLeft);
				--gradient-top-right: var(--topRight);
			}
		</style>
	</head>
	<body class="bg-gray-100 dark:bg-gray-900 dark:text-gray-100">
		<div id="app">
			<App
				client:load
				config={config}
				profile={profile}
				ghUsername={ghUsername}
				projectPages={projectPages}
				hasHero={!!heroMd}
				langColors={langColors}
			>
				<Hero slot="hero" source={heroMd} />
			</App>
		</div>
	</body>
</html>
